{
  "manifest_version": 3,
  "name": "SummerEase",
  "version": "1.0.0",
  "description": "Quickly summarize any webpage with just a click. Get concise, clear insights without the clutter.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon32.png",
    "128": "icons/icon192.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon32.png",
      "128": "icons/icon192.png"
    },
    "default_popup": "index.html"
  },
  "permissions": ["activeTab"]
}
